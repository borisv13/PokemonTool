<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boris.pokemontool" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerNotesDatabaseActivity"
            android:label="@string/title_activity_player_notes_database"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.boris.pokemontool.MainActivity" />
        </activity>
        <activity
            android:name=".PlayerNotesActivity"
            android:label="@string/title_activity_player_notes"
            android:parentActivityName=".PlayerNotesDatabaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.boris.pokemontool.PlayerNotesDatabaseActivity" />
        </activity>
        <activity
            android:name=".RollDiceActivity"
            android:label="@string/title_roll_dice_activity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.boris.pokemontool.MainActivity" />
        </activity>
    </application>

</manifest>
