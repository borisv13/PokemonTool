
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linlay">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_notes"
        android:id="@+id/buttonDatabase"
        android:onClick="goToPlayerNotes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll_die"
        android:id="@+id/buttonDice"
        android:onClick="goToRollDie"
        android:rotation="180"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_db"
        android:id="@+id/buttonAddDB"
        android:onClick="addDB" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAsleep"
        android:src="@drawable/asleep"
        android:cropToPadding="false"
        android:onClick="clickBurned"
        android:background="@android:color/transparent" />

</LinearLayout>